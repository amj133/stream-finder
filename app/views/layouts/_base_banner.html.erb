<div class="max-width-5 mx-auto top-90 top-nav">
  <div class="login-options">
    <div class="col col-1 login-links left-align">
      <%= link_to "Register", register_path, class:"register" unless current_user %>
    </div>
    <div class="col col-1 login-links left-align">
      <%= link_to "Log in", login_path, class:"register" unless current_user %>
    </div>
    <div class="col col-1 login-links left-align">
      <%= link_to image_tag("google_button.png"), "/auth/google", class:"google" unless current_user %>
    </div>
    <div class="col col-1 login-links left-align username">
      <%= current_user.first_name if current_user %>
    </div>
    <div class="logout-link">
      <%= link_to("logout", logout_path, class:'register') if current_user %>
    </div>
  </div>
</div>
